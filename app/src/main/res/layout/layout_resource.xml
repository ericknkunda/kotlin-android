<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/layout_borders"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/three_bar_button"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:id="@+id/three_bar"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/countries"
        android:text="@string/firstfragment"
        android:background="@drawable/button_borders"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_margin="10dp"
        style="@style/btn_bgrd"
        android:onClick="openFirstFragment"
        android:textSize="12dp"/>
    <Button
        android:id="@+id/othercountries"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="@string/secondfragment"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textAlignment="center"
        style="@style/btn_bgrd"
        android:background="@drawable/button_borders"
        android:textColor="#000000"
        android:onClick="openSecondFragment"
        android:fontFamily="sans-serif"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rgb1"
        android:id="@+id/fragment_frame">

        <ImageView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:id="@+id/globe"
            android:src="@drawable/globe"/>
    </FrameLayout>


</LinearLayout>